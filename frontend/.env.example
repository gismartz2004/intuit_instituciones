# Environment Variables Example for Frontend
# Copy this file to .env.local for local development
# Copy to .env.production for production builds

# ===============================================
# BACKEND API CONFIGURATION
# ===============================================

# Backend API Base URL (REQUIRED)
# Development: http://localhost:3000
# Production: https://your-backend-url.run.app
VITE_API_BASE_URL=http://localhost:3000

# ===============================================
# APPLICATION CONFIGURATION
# ===============================================

# Application name
VITE_APP_NAME=ARG Academy

# Enable analytics (true/false)
VITE_ENABLE_ANALYTICS=false

# ===============================================
# ENVIRONMENT
# ===============================================
# Automatically set by Vite (development, production)
# MODE=development
